---
import Layout from "./Layout.astro";
import Intro from "~/components/Intro.astro";

import { Image } from "astro:assets";
import grass3 from "~/assets/grass3.svg";
---

<Layout>
  <main class="mx-auto max-w-4xl p-8 lg:py-12">
    <Intro />
    <div class="prose mt-8">
      <slot />
    </div>
  </main>

  <div class="aspect-1440/68 w-full"></div>
  <div class="fixed inset-x-0 bottom-0 bg-linear-to-t from-white via-white/80">
    <Image src={grass3} alt="" role="presentation" class="w-full" />
  </div>
</Layout>
